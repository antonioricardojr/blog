<%= form_with model: @blog_post do |f| %>

    <% if f.object.errors.any? %>
        <div id="error_explanation">
            <ul>
                <% f.object.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </div>

    <div>
        <%= f.label :body %><br>
        <%= f.rich_text_area :content %>
    </div>

    <div>
        <%= f.label :published_at %>
        <%= f.datetime_select :published_at %>
    </div>

    <div>
    <%= f.submit %>
    </div>
<% end %>